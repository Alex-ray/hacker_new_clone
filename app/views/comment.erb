<div class="container">
  <li>
    <a href="<%= @post.url %>">
      <%= @post.title %>
    </a>
    <span>(<%= @post.url %>)</span>
  </li>
  <form action="/<%= @post.id %>/comment" method="post">
    <textarea type="text" name="body" placeholder="What the FACK you got to say?"></textarea>
    <button type="submit">Submit Comment</button>
  </form>
</div>
